<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_base"
        layout="@layout/title_base" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_15">

        <EditText
            android:id="@+id/et_regular_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/a_border"
            android:gravity="center"
            android:hint="@string/regular_phone"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_regular_test"
            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_regular_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bank_car"
            android:gravity="center"
            android:text="@string/regular_test"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_formatting_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_regular_test"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:text="格式化" />

        <TextView
            android:id="@+id/tv_regular_formatting_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_formatting_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bank_car"
            android:gravity="center"
            android:padding="@dimen/dp_3"
            android:text="@string/regular_formatting_phone"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>